{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run PropertySphere",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"run",
				"--project",
				"${workspaceFolder}/PropertySphere.csproj"
			],
			"problemMatcher": "$msCompile",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"reveal": "always",
				"panel": "new"
			}
		},
		{
			"label": "Build PropertySphere",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"build",
				"${workspaceFolder}/PropertySphere.csproj"
			],
			"problemMatcher": "$msCompile",
			"group": "build"
		},
		{
			"label": "Generate Demo Data",
			"type": "shell",
			"command": "Invoke-RestMethod",
			"args": [
				"-Uri",
				"http://localhost:5000/api/datageneration/generate-data?telegramChatId=${input:telegramChatId}",
				"-Method",
				"POST"
			],
			"problemMatcher": [],
			"presentation": {
				"reveal": "always"
			}
		},
		{
			"label": "Watch PropertySphere",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"watch",
				"run",
				"--project",
				"${workspaceFolder}/PropertySphere.csproj"
			],
			"problemMatcher": "$msCompile",
			"isBackground": true,
			"presentation": {
				"reveal": "always",
				"panel": "dedicated"
			}
		}
	],
	"inputs": [
		{
			"id": "telegramChatId",
			"type": "promptString",
			"description": "Your Telegram Chat ID (get it from @userinfobot on Telegram)",
			"default": ""
		}
	]
}