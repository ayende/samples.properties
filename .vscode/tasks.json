{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run PropertySphere",
			"type": "shell",
			"command": "python",
			"args": [
				"${workspaceFolder}/main.py"
			],
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"reveal": "always",
				"panel": "new"
			},
			"cwd": "${workspaceFolder}"
		},
		{
			"label": "Install Dependencies",
			"type": "shell",
			"command": "pip",
			"args": [
				"install",
				"-r",
				"${workspaceFolder}/requirements.txt"
			],
			"problemMatcher": [],
			"group": "build"
		},
		{
			"label": "Generate Demo Data",
			"type": "shell",
			"command": "Invoke-RestMethod",
			"args": [
				"-Uri",
				"'http://localhost:8000/api/datageneration/generate-data?telegram_chat_id=${input:telegramChatId}'",
				"-Method",
				"POST"
			],
			"problemMatcher": [],
			"presentation": {
				"reveal": "always"
			}
		},
		{
			"label": "Watch PropertySphere",
			"type": "shell",
			"command": "python",
			"args": [
				"-m",
				"uvicorn",
				"main:app",
				"--reload"
			],
			"problemMatcher": [],
			"isBackground": true,
			"presentation": {
				"reveal": "always",
				"panel": "dedicated"
			},
			"cwd": "${workspaceFolder}"
		}
	],
	"inputs": [
		{
			"id": "telegramChatId",
			"type": "promptString",
			"description": "Enter your Telegram chat ID (get it from @userinfobot on Telegram)",
			"default": ""
		}
	]
}